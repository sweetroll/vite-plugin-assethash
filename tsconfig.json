{
    "compilerOptions": {
        "module": "NodeNext", // Use Node's modern ESM system
        "moduleResolution": "NodeNext", // Resolves imports using NodeNext strategy
        "target": "ESNext", // Compiles to modern JavaScript
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
